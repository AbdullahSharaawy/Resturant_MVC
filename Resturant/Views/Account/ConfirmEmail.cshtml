@{
    ViewData["Title"] = "Email Confirmed";
    Layout = "_AuthLayout";

}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4>Email Confirmed</h4>
                </div>
                <div class="card-body">
                    <p>
                        Thank you for confirming your email. Your account is now active.
                    </p>
                    <div class="mt-3">
                        <a asp-action="Login" class="btn btn-primary">Log In</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>