@{
    ViewData["Title"] = "Registration Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Registration Confirmation</h4>
                </div>
                <div class="card-body">
                    <p>
                        Thank you for registering! A confirmation email has been sent to <strong>@ViewBag.Email</strong>.
                        Please check your email and click the confirmation link to complete your registration.
                    </p>
                    <p>
                        If you don't receive the email within a few minutes, please check your spam folder or
                        <a asp-action="ResendEmailConfirmation" asp-route-email="@ViewBag.Email">click here to resend the confirmation email</a>.
                    </p>
                    <div class="mt-3">
                        <a asp-action="Login" class="btn btn-secondary">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>