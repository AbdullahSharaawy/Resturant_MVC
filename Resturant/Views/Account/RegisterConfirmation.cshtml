@{
    ViewData["Title"] = "Registration Confirmation";
}

<style>
    /* Custom styles for the registration confirmation page */
    body {
        background-color: #0c0b09; /* Deep charcoal background */
        color: #fff; /* White text for contrast */
        font-family: "Poppins", sans-serif;
    }

    .vh-100 {
        background-color: #1a1814; /* Slightly lighter charcoal for container background */
        padding: 40px 0;
    }

    .card {
        background-color: #1a1814; /* Darker charcoal for the card background */
        border: 1px solid #2a2723; /* Subtle border */
        border-radius: 12px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.5); /* Enhanced, softer shadow */
        color: #e0e0e0;
        padding: 30px;
    }

    .card-header {
        background-color: transparent !important;
        border-bottom: none;
        padding-bottom: 0;
        text-align: center;
    }

    .card-header h4 {
        font-family: "Playfair Display", serif;
        font-weight: 700;
        color: #cda45e; /* Prominent golden heading */
        font-size: 2.2rem;
        letter-spacing: 1px;
        margin-bottom: 20px;
    }

    .card-body p {
        color: #e0e0e0;
        font-size: 1rem;
        line-height: 1.6;
        text-align: center;
    }

    .card-body strong {
        color: #cda45e;
    }

    /* Link styling */
    .card-body a {
        color: #cda45e !important;
        text-decoration: none;
        transition: color 0.3s ease-in-out;
        font-weight: 600;
    }

    .card-body a:hover {
        color: #d4af6a !important;
        text-decoration: underline;
    }

    /* Button styling */
    .btn-secondary {
        background-color: #3a362e !important;
        border: 1px solid #4a453d !important;
        color: #e0e0e0 !important;
        font-weight: 600;
        border-radius: 8px;
        padding: 10px 25px;
        font-size: 1rem;
        transition: all 0.3s ease-in-out;
    }

    .btn-secondary:hover {
        background-color: #4a453d !important;
        transform: translateY(-1px);
    }

    .text-center {
        text-align: center !important;
    }
</style>

<section class="vh-100">
    <div class="container h-custom d-flex justify-content-center align-items-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card">
                <div class="card-header">
                    <h4>Registration Confirmation</h4>
                </div>
                <div class="card-body">
                    <p>
                        Thank you for registering! A confirmation email has been sent to <strong>@ViewBag.Email</strong>.
                        Please check your email and click the confirmation link to complete your registration.
                    </p>
                    <p>
                        If you don't receive the email within a few minutes, please check your spam folder or
                        <a asp-action="ResendEmailConfirmation" asp-route-email="@ViewBag.Email">click here to resend the confirmation email</a>.
                    </p>
                    <div class="mt-4 text-center">
                        <a asp-action="Login" class="btn btn-secondary">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>