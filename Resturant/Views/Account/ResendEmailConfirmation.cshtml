@model string

@{
    ViewData["Title"] = "Resend Email Confirmation";
}

<style>
    /* Custom styles for the resend email confirmation page */
    body {
        background-color: #0c0b09; /* Deep charcoal background */
        color: #fff; /* White text for contrast */
        font-family: "Poppins", sans-serif;
    }

    .vh-100 {
        background-color: #1a1814; /* Slightly lighter charcoal for container background */
        padding: 40px 0;
    }

    .card {
        background-color: #1a1814; /* Darker charcoal for the card background */
        border: 1px solid #2a2723; /* Subtle border */
        border-radius: 12px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.5); /* Enhanced, softer shadow */
        color: #e0e0e0;
        padding: 30px;
    }

    .card-header {
        background-color: transparent !important;
        border-bottom: none;
        padding-bottom: 0;
        text-align: center;
    }

    .card-header h4 {
        font-family: "Playfair Display", serif;
        font-weight: 700;
        color: #cda45e; /* Prominent golden heading */
        font-size: 2.2rem;
        letter-spacing: 1px;
        margin-bottom: 20px;
    }

    .card-body p {
        color: #e0e0e0;
        font-size: 1rem;
        line-height: 1.6;
        text-align: center;
    }

    /* Input field styling */
    .form-control {
        background-color: #24211b; /* Darker input background */
        color: #fff;
        border: 1px solid #3a362e;
        border-radius: 6px;
        padding: 12px 16px;
        font-size: 1rem;
        transition: all 0.3s ease-in-out; /* Smooth transition for focus */
    }

    .form-control::placeholder {
        color: #888; /* Slightly lighter placeholder text */
        font-size: 0.95rem;
    }

    .form-control:focus {
        background-color: #2a2721;
        color: #fff;
        border-color: #cda45e; /* Golden border on focus */
        box-shadow: 0 0 0 0.25rem rgba(205, 164, 94, 0.4); /* Golden glow on focus */
    }

    /* Label styling */
    .form-group label {
        color: #e0e0e0;
        margin-bottom: 0.5rem;
        display: block;
    }

    /* Button styling */
    .btn-primary {
        background-color: #cda45e !important;
        border: none !important;
        color: #1a1814 !important; /* Dark text on golden button */
        font-weight: 700;
        border-radius: 8px;
        padding: 12px 30px;
        font-size: 1rem;
        letter-spacing: 0.5px;
        transition: all 0.3s ease-in-out;
        box-shadow: 0 4px 15px rgba(205, 164, 94, 0.3);
    }

    .btn-primary:hover {
        background-color: #d4af6a !important; /* Lighter golden on hover */
        box-shadow: 0 6px 20px rgba(205, 164, 94, 0.4);
        transform: translateY(-2px); /* Subtle lift on hover */
    }

    .btn-secondary {
        background-color: #3a362e !important;
        border: 1px solid #4a453d !important;
        color: #e0e0e0 !important;
        font-weight: 600;
        border-radius: 8px;
        padding: 10px 25px;
        font-size: 1rem;
        transition: all 0.3s ease-in-out;
    }

    .btn-secondary:hover {
        background-color: #4a453d !important;
        transform: translateY(-1px);
    }
</style>

<section class="vh-100">
    <div class="container h-custom d-flex justify-content-center align-items-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card">
                <div class="card-header">
                    <h4>Resend Email Confirmation</h4>
                </div>
                <div class="card-body">
                    <form asp-action="ResendEmailConfirmation" method="post">
                        <div class="form-group mb-4">
                            <label for="email">Email Address</label>
                            <input type="email" class="form-control" id="email" name="email" value="@Model" placeholder="Enter your email" required />
                        </div>
                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary w-100">Resend Confirmation</button>
                        </div>
                        <div class="mt-3 text-center">
                            <a asp-action="Login" class="btn btn-secondary">Back to Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>