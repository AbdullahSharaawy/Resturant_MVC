@model RegisterDTO
@section HeaderLinks {
    <partial name="_HeaderLinks" />
}
<style>
    /* Dark Mode Base Styles */
    body {
        background-color: #1a1a1a; /* Very dark grey/near black for the body */
        color: #f8f9fa; /* Light text for contrast */
    }

    .vh-100 {
        background-color: #212121; /* Slightly lighter dark for the main section background */
    }

    /* Divider color */
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #444; /* Darker grey for the divider line */
    }

    /* Custom height for mobile */
    .h-custom {
        height: calc(100% - 73px);
    }

    @@media (max-width: 450px) {
        .h-custom {
            height: 100%;
        }
    }

    /* Text color for labels and general text */
    .form-label,
    p,
    .text-body {
        color: #f8f9fa !important; /* Ensure all text is light */
    }

    /* Input field styling for dark mode */
    .form-control {
        background-color: #333; /* Dark background for input fields */
        color: #f8f9fa; /* Light text for input values */
        border-color: #555; /* Slightly lighter border */
    }

        .form-control::placeholder {
            color: #bbb; /* Lighter placeholder text */
        }

        .form-control:focus {
            background-color: #444; /* Slightly lighter on focus */
            color: #f8f9fa;
            border-color: #888; /* More prominent border on focus */
            box-shadow: 0 0 0 0.25rem rgba(255, 255, 255, 0.25); /* White shadow for focus */
        }

    /* Checkbox styling */
    .form-check-input {
        background-color: #333; /* Dark background for checkbox */
        border-color: #555; /* Darker border */
    }

        .form-check-input:checked {
            background-color: #fff; /* White when checked */
            border-color: #fff; /* White border when checked */
        }

    /* Button styling (replacing blue with black/white/dark grey) */
    .btn-primary {
        background-color: #343a40 !important; /* Dark grey for primary buttons */
        border-color: #343a40 !important; /* Dark grey border */
        color: #f8f9fa !important; /* White text */
    }

        .btn-primary:hover {
            background-color: #23272b !important; /* Even darker on hover */
            border-color: #23272b !important;
        }

    .btn-floating {
        background-color: #495057 !important; /* Slightly lighter dark for floating buttons */
        border-color: #495057 !important;
    }

        .btn-floating:hover {
            background-color: #343a40 !important;
            border-color: #343a40 !important;
        }

    /* Footer styling */
    .bg-primary {
        background-color: #1a1a1a !important; /* Black for the footer */
    }

    /* Link color */
    .link-danger,
    a.text-body {
        color: #f8f9fa !important; /* White for links */
    }

        .link-danger:hover,
        a.text-body:hover {
            color: #ccc !important; /* Slightly grey on hover */
        }

</style>

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form>
                    <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                        <p class="lead fw-normal mb-0 me-3">Register with</p>
                        <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-floating mx-1">
                            <i class="fab fa-facebook-f"></i>
                        </button>

                        <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-floating mx-1">
                            <i class="fab fa-google"></i>
                        </button>
                        <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-floating mx-1">
                            <i class="fab fa-instagram"></i>
                        </button>
                    </div>

                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0">Or</p>
                    </div>

                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" id="formRegisterFirstName" class="form-control form-control-lg"
                               placeholder="Enter your first name" />
                        <label class="form-label" for="formRegisterFirstName">First Name</label>
                    </div>

                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" id="formRegisterLastName" class="form-control form-control-lg"
                               placeholder="Enter your last name" />
                        <label class="form-label" for="formRegisterLastName">Last Name</label>
                    </div>

                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="email" id="formRegisterEmail" class="form-control form-control-lg"
                               placeholder="Enter a valid email address" />
                        <label class="form-label" for="formRegisterEmail">Email address</label>
                    </div>

                    <div data-mdb-input-init class="form-outline mb-3">
                        <input type="password" id="formRegisterPassword" class="form-control form-control-lg"
                               placeholder="Enter password" />
                        <label class="form-label" for="formRegisterPassword">Password</label>
                    </div>

                    <div data-mdb-input-init class="form-outline mb-3">
                        <input type="password" id="formRegisterConfirmPassword" class="form-control form-control-lg"
                               placeholder="Confirm your password" />
                        <label class="form-label" for="formRegisterConfirmPassword">Confirm Password</label>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input class="form-check-input me-2" type="checkbox" value="" id="formRegisterTerms" />
                            <label class="form-check-label" for="formRegisterTerms">
                                I agree to the <a href="#!" class="text-body">terms and conditions</a>
                            </label>
                        </div>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Register
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Already have an account? <a href="#!"
                                                        class="link-danger">Login</a>
                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>
   
</section>