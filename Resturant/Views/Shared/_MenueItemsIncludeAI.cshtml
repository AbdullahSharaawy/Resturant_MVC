@model List<MenueItemDTO>
<style>
    

    .analyze-btn {
        display: inline-block;
        margin-top: 10px;
        padding: 8px 18px;
        background-color: #ffc107; /* Gold */
        color: #1e1e1e; /* Dark text for contrast */
        font-weight: 600;
        border: none;
        border-radius: 6px;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .analyze-btn:hover {
            background-color: #e0a800; /* Darker gold */
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 193, 7, 0.3);
        }
</style>



    <div class="row isotope-container" data-aos="fade-up" data-aos-delay="200">
        @foreach(var item in @Model)
        {
            <div class="col-lg-6 menu-item isotope-item filter-starters">
                <img src="/Files/ItemsImages/@item.ImagePath" class="menu-img" alt="">
                <div class="menu-content">
                    <a href="#">@item.Name</a><span>$@item.Price</span>
                </div>
                <div class="menu-ingredients">
                    @item.Description
                </div>
            <button class="analyze-btn" onclick="GetMealGredients('@item.Description')">Analyze Nutrition</button>

        </div>

            <!-- Menu Item -->
        }
       

    </div><!-- Menu Container -->




