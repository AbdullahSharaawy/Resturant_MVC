 @model UpdateReservationDTO

<div class="profile-section">
    <h3 class="profile-section-title">My Reservations</h3>

    @foreach (var reservation in Model.Reservations)

    {

        var branch = Model.Branches.FirstOrDefault(b => b.BranchID == reservation.BranchID);

        var location = branch != null ? $"{branch.City}, {branch.StreetName}, {branch.BuildingNo}" : "Unknown";

        <div class="card reservation-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Reservation #@reservation.ReservationID</span>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <h5>Date & Time</h5>
                        <p>@reservation.DateTime.ToString("MMMM dd, yyyy")<br />@reservation.DateTime.ToString("hh:mm tt")</p>
                    </div>
                    <div class="col-md-4">
                        <h5>Details</h5>
                        <p>@reservation.NumberOfGuests people<br /><strong>Location:</strong> @location</p>
                    </div>
                    <div class="col-md-4">
                        <h5>Actions</h5>
                        <button class="btn btn-outline-primary btn-sm mb-2 modify-btn" data-item-id="@reservation.ReservationID">Modify</button>
                        <button class="btn btn-outline-danger btn-sm mb-2 cancel-btn" data-item-id="@reservation.ReservationID">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="text-center mt-4">
        <button class="btn btn-primary">Make New Reservation</button>
    </div>
</div>

